<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="sortie_stock_detail">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="prix" type="NUMERIC"/>
        <column name="quantite" type="NUMERIC"/>
        <column name="description" type="VARCHAR(500)"/>

        <column name="sortie_stock_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="produit_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="magazin_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="sortie_stock_detail"
              baseColumnNames="sortie_stock_id"
              referencedTableName="sortie_stock"
              referencedColumnNames="id"
              constraintName="fk_sortie_stock_detail_sortie_stock"/>
      <addForeignKeyConstraint
              baseTableName="sortie_stock_detail"
              baseColumnNames="produit_id"
              referencedTableName="produit"
              referencedColumnNames="id"
              constraintName="fk_sortie_stock_detail_produit"/>
      <addForeignKeyConstraint
              baseTableName="sortie_stock_detail"
              baseColumnNames="magazin_id"
              referencedTableName="magazin"
              referencedColumnNames="id"
              constraintName="fk_sortie_stock_detail_magazin"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="sortie_stock_detail_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/output/SortieStockDetail.csv"
            tableName="sortie_stock_detail">
      <column name="id" type="NUMERIC"/>
          <column name="prix" type="NUMERIC"/>
          <column name="quantite" type="NUMERIC"/>
          <column name="description" type="STRING"/>
        <column name="sortie_stock" type="BIGINT"/>
        <column name="produit" type="BIGINT"/>
        <column name="magazin" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
